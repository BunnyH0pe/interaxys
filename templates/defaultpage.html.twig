                    <div class="swiper-slide flexswipe">
                        <div>
                            <div class="relative-logo">
                                <img class="logoslide" src="{{ asset('uploads/images/slideroffre/' ~ offre.3.image_titre) }}" alt="{{ offre.3.titre }}">
