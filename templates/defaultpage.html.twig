        <li><a id="presentationlink" href="#presentation"><p>{{ lienmenu.lien1 }}</p></a></li>
        <li><a id="solutionslink" href="#solutions"><p>{{ lienmenu.lien2 }}</p></a></li>
        <li><a id="savoir-fairelink" href="#savoir-faire"><p>{{ lienmenu.lien3 }}</p></a></li>
        <li><a id="contactlink" href="#contact"><p>{{ lienmenu.lien4 }}</p></a></li>
