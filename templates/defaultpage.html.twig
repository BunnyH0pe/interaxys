                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="clients">
    <h2>NOS CLIENTS</h2>
    <div class="flexclient">
        <div class="sectionlimit">
        <!-- Slider main container -->
        <div class="swiper-container3">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                {% for client in clients %}
                    <div class="swiper-slide"><img src="{{ asset('uploads/images/clients/' ~ client.imageFile) }}" alt="{{ client.attr_alt }}"></div>
                {% endfor %}
            </div>
        </div>
        </div>
    </div>
</section>

<section id="contact">
    <div class="sectionlimit">
        <h2>NOUS CONTACTER</h2>
        <div class="formulaire">
            <form action="" method="post">
                <div class="flexline">
                    <div class="firstflexform">
                        <div class="geometrieconteneur">
                            <input id="nom" type="text" nom="nom" placeholder="NOM" required>
                        </div>
                        <div class="geometrieconteneur">
                            <input id="prenom" type="text" name="prenom" placeholder="PRENOM" required>
                        </div>
                    </div>
                    <div class="secondflexform">
                        <div class="geometrieconteneur">
                            <input id="email" type="email" name="email" placeholder="EMAIL" required>
                        </div>
                        <div class="geometrieconteneur">
                            <input id="tel" type="text" name="tel" placeholder="TEL" required>
                        </div>
                    </div>
                </div>
                <div class="geometrieconteneur geometrieconteneurobjet">
                    <input id="objet" type="text" name="objet" placeholder="OBJET" required>
                </div>

                <div class="geometrieconteneur geometrieconteneurarea">
                    <textarea style="resize: none" name="" id="message" cols="30" rows="10" required placeholder="Votre message..."></textarea>
                </div>
                <div class="btn-right">
                        <input type="submit" value="VALIDER">
                </div>
            </form>
        </div>
    </div>

</section>
<footer>
    <section id="footer">
        <div class="tel"><img src="{{ asset('img/call.svg') }}" alt="Tel picto"><p>{{ contact.tel }}</p></div>
        <div class="mail"><img src="{{ asset('img/email.svg') }}" alt="Mail picto"><a href="mailto:{{ contact.email }}">{{ contact.email }}</a></div>
        <div class="reseaux-sociaux">
            <a href="{{ contact.lien_facebook }}"><img id="facebook" src="{{ asset('img/001-facebook.svg') }}" alt="logo facebook"></a>
            <a href="{{ contact.lien_linkedin }}"><img id="linkedin" src="{{ asset('img/010-linkedin.svg') }}" alt="logo linkedin"></a>
            <a href="{{ contact.lien_twitter }}"><img id="twitter" src="{{ asset('img/013-twitter.svg') }}" alt="logo twitter"></a></div>
        <a class="mentions-legales" href="{{ path('mentionslegales') }}"><p >Mentions Légales</p></a>
