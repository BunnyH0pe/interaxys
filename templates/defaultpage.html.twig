            </div>

           <div class="cardsol" id="cardstrat">
                <article>
                    <h3>{{ approche.1.titre }}</h3>
                    <p>{{ approche.1.description|raw }}</p>
                    <h4>{{ approche.1.mot_clef }}</h4>
                    <ul>
                        <li><h5>{{ motcleapproche.motcle1 }}</h5><h6>{{ approche.1.motcle1 }}</h6></li>
