                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                    <!-- Slides -->
                    <div class="swiper-slide flexswipe">
                        <div>
                            <div class="relative-logo">
                                <img class="logoslide" src="{{ asset('uploads/images/slideroffre/' ~ offre.0.image_titre) }}" alt="{{ offre.0.titre }}">
                                <h3 id="firsth3">{{ offre.0.titre }}</h3>
                            </div>
                            <div class="invisible-text">
                                <p>{{ offre.0.description|striptags('div') }}</p>
                                <button id="button1">Plus d'infos</button>
                                <input type="hidden" id="hidden1" value="{{ formulaire.0.Message }}">
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide flexswipe">
