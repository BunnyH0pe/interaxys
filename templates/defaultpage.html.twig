<section id="headerbg">
    <div class="sliderdiv">
        <!-- Slider main container -->
        <div class="swiper-container">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                {% for slide in slider %}
                    <div class="swiper-slide">
                        <div class="sliderslide" style="background-image: url('{{ asset('uploads/images/headslider/' ~ slide.image) }}');">
                            <div class="centerslider">
                                <h2 class="slidertitre" data-glitch="{{ slide.titre }}">{{ slide.titre }}</h2>
                                <div class="sliderundertitle">{{ slide.soustitre|raw }}</div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>

            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
</section>

<section id="presentation">
    <article>
        <div class="premierepresentation">
            <div class="sectionlimit">
                <h2>Notre vision</h2>
                <div class="doubleflex">
                    <div class="textpresentation">
                        {{ vision.paragraphe1|raw }}
                    </div>
                    <img id="imgtourne" src="{{ asset('img/formegeo1.svg') }}" alt="forme geométrique 1">
                </div>
                <div class="pflex">
                    {{ vision.paragraphe2|raw }}
                </div>
            </div>
        </div>

        <div class="bgcitation">

            <div class="citations">
                {% for citation in citations %}
                <div style="display: none">
                    <p>« {{ citation.citation|striptags('div') }} »</p>
                    <strong id="nommage">{{ citation.auteur }}</strong>
                </div>
                {% endfor %}
            </div>
        </div>


        <div class="presentation-video">
            <iframe width="907" height="510" src="{{ vision.lienvideo }}"
                    title="YouTube video player" frameborder="0" allow="accelerometer;
                     autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
            </iframe>
        </div>
    </article>
</section>
<section id="solutions">
    <div class="sectionlimit">
        <h2>Notre approche</h2>
        <div class="flex-solution">
