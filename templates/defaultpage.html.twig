                        <li><h5>{{ motcleapproche.motcle4 }}</h5><h6>{{ approche.1.motcle4 }}</h6></li>
                    </ul>
                </article>
            </div>

            <div  class="cardsol" id="cardtact">
                <article>
                    <h3>{{ approche.2.titre }}</h3>
                    <p>{{ approche.2.description|striptags('div') }}</p>
                    <h4>{{ approche.2.mot_clef }}</h4>
                    <ul>
                        <li><h5>{{ motcleapproche.motcle1 }}</h5><h6>{{ approche.2.motcle1 }}</h6></li>
                        <li><h5>{{ motcleapproche.motcle2 }}</h5><h6>{{ approche.2.motcle2 }}</h6></li>
                        <li><h5>{{ motcleapproche.motcle3 }}</h5><h6>{{ approche.2.motcle3 }}</h6></li>
                        <li><h5>{{ motcleapproche.motcle4 }}</h5><h6>{{ approche.2.motcle4 }}</h6></li>
                    </ul>
                </article>
            </div>

            <div class="cardsol" id="cardope">
                <article>
                    <h3>{{ approche.3.titre }}</h3>
                    <p>{{ approche.3.description|raw }}</p>
                    <h4>{{ approche.3.mot_clef }}</h4>
                    <ul>
                        <li><h5>{{ motcleapproche.motcle1 }}</h5><h6>{{ approche.3.motcle1 }}</h6></li>
                        <li><h5>{{ motcleapproche.motcle2 }}</h5><h6>{{ approche.3.motcle2 }}</h6></li>
                        <li><h5>{{ motcleapproche.motcle3 }}</h5><h6>{{ approche.3.motcle3 }}</h6></li>
                        <li><h5>{{ motcleapproche.motcle4 }}</h5><h6>{{ approche.3.motcle4 }}</h6></li>
                    </ul>
                </article>
            </div>
        </div>
    </div>
    </div>
</section>

<div class="ban-etoile">
    <canvas id="canvas" height="350" width="350"></canvas>
    <div>
        <strong class="titreinteraxys">{{ banapproche.titre }}</strong> <br> <br>
        <strong>{{ banapproche.soustitre|striptags('div') }}</strong>
