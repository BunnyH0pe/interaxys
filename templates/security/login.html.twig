<body>

<div class="limiter">
    <div class="container-login100" style="background-image: url('../../public/img/bg-01.jpg');">
        <div class="wrap-login100 p-t-30 p-b-50">
				<span class="login100-form-title p-b-41">
					Accès Administrateur
				</span>
            <form method="post" class="login100-form validate-form p-b-33 p-t-5">
                <div class="wrap-input100 validate-input" data-validate = "Entrer l'utilisateur">
                    <input type="username" value="{{ last_username }}" name="username" id="inputUsername" class="form-control input100" autocomplete="username" required autofocus placeholder="Utilisateur">
                    <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Entrer le mot de passe">
                    <input type="password" name="password" id="inputPassword" class="form-control input100" autocomplete="current-password" required placeholder="Mot de passe">
                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                </div>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en temps que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <div class="container-login100-form-btn m-t-32">
                    <input type="submit" class="login100-form-btn" value="CONNEXION">
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            </form>
        </div>
    </div>
</div>


